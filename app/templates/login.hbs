{{outlet}}
<form {{action 'login' on="submit"}} id="formLogin">
    <h1>Todolist</h1>
    <p class="formLoginIntro">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Exercitationem cupiditate accusantium praesentium eveniet.</p>
    <p class="formLoginField formLoginEmail">
        <label for="email">Email:</label>
        {{one-way-input type="email" id="email_input" update=(action (mut email))}}
    </p>
    <p class="formLoginField formLoginPassword">
        <label for="password">Password:</label>
        {{one-way-input type="password" id="password_input" update=(action (mut password))}}
    </p>
    <p class="formLoginSubmit">
        <input 
            type="submit" 
            value="Login" 
            >
    </p>
    <p class="formLoginForgot">
        <a href="#">Forgot Password?</a>
    </p>
</form>